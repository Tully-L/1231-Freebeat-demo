{
  "name": "freebeat",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5"
    }
  },
  "type": "module",
  "scripts": {
    "check": "biome check --write .",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F web dev"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@freebeat/env": "workspace:*"
  },
  "devDependencies": {
    "turbo": "^2.7.2",
    "@biomejs/biome": "2.3.10",
    "ultracite": "6.5.0",
    "typescript": "catalog:",
    "@freebeat/config": "workspace:*"
  },
  "packageManager": "bun@1.3.2"
}
